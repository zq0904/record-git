/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
page {
  background-color: #fff;
}
/* 间隔条 */
.interval {
  height: 20rpx;
  background-color: #F2F2F2;
  box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, 0.1) inset;
}
/* 边框细线 */
.bdr {
  position: relative;
}
.bdr::after {
  content: '';
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  border-left: 1rpx solid #ccc;
}
/* 箭头 */
.arrows {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 27rpx;
}
.arrows::after {
  content: '';
  width: 15rpx;
  height: 15rpx;
  border-top: 1rpx solid #000;
  border-right: 1rpx solid #000;
  transform: rotate(45deg);
}
/* 宽度%星星 */
.star {
  position: absolute;
  top: 10rpx;
  right: 13rpx;
}
/* 利用第一个星星撑开.star */
.star .starNone {
  color: #E3E3E3;
}
/* 这样%才会正常显示 定位left */
.star .starStyle {
  color: #F29E39;
  overflow-x: hidden;
  position: absolute;
  top: 0;
  left: 0;
}
/* 单行省略号 */
.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/* .select列表样式 */
.select{
    display: flex;
    height: 86rpx;
    line-height: 86rpx;
    padding-left: 30rpx;
    border-bottom: 2rpx solid #dedede;
    font-size: 31rpx;
    color: #000;
    background-color: #fff;
}
/* 正在加载公共样式 */
.loadmore {
    color: #888;
    font-size: 30rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
}
.loadmore.loading::before {
    content: '';
    width: 40rpx;
    height: 40rpx;
    margin-top: -5rpx;
    margin-right: 5rpx;
    display: inline-block;
    vertical-align: middle;
    animation: loading 1s steps(12) infinite;
    background: transparent url(data:image/svg+xml;base64,) no-repeat;
    background-size: 100%;
}
@keyframes loading {
    from {
    transform: rotate(0deg);
    }
    to {
    transform: rotate(-360deg);
    }
}