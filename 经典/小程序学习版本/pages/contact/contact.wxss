/* pages/contact/contact.wxss */
text {
    display: block;
    text-align: center;
    font-size: 31rpx;
    color: #000;
    height: 86rpx;
    line-height: 86rpx;
    border-bottom: 2rpx solid #ddd;
}
.father {
    width: 200rpx;
    height: 200rpx;
    line-height: 200rpx;
    background-color: blue;
    text-align: center;
    position: relative;
    margin: 0 auto;
}
.son {
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    background-color: red;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}