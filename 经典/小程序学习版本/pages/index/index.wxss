/* 轮播图 */
.banner image,
.banner swiper{
  width: 100%;
  height: 390rpx;
  vertical-align: top;
}
/* 导航 */
.nav {
  display: flex;
  flex-wrap: wrap;
}
.nav navigator {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column; 
  width: 33.333333%;
  height: 200rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ccc;
  font-size: 14px;
}
.nav navigator:nth-child(3n-2)::after {
  border-left-color: transparent;
}
.nav navigator image {
  width: 70rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}
/* 推选 */
.elect {
  display: flex;
  justify-content: space-between;
  padding: 8px 15px;
}
.elect image {
  width: 320rpx;
  height: 178rpx;
}