{
  "extends": "../tslint.json", // 继承自上一级
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ],
    // 修改规则
    "curly": [false], // if等必须使用{}
    "semicolon": [ // 无;
      false,
      "always"
    ]
  }
}
